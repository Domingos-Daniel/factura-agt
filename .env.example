# === Configuração de Integrações Externas (SAP & AGT) ===
# Ajuste estes valores para apontar o protótipo para ambientes reais ou de homologação.

# Paisagem SAP activa: sandbox | quality | production
NEXT_PUBLIC_SAP_LANDSCAPE=sandbox

# Endpoints públicos utilizados pelo frontend (apresentados nas UIs)
NEXT_PUBLIC_SAP_ODATA_GATEWAY_URL=https://sap-dev.local/sap/opu/odata/sap/ZFACTURA_AGT_SRV
NEXT_PUBLIC_SAP_ODATA_HEALTH_URL=https://sap-dev.local/sap/opu/odata/sap/ZFACTURA_AGT_SRV/$metadata
NEXT_PUBLIC_SAP_EVENT_MESH_URL=https://sap-dev.local/api/facturas/notify
NEXT_PUBLIC_SAP_EVENT_MESH_HEALTH_URL=https://sap-dev.local/api/facturas/notify/health
NEXT_PUBLIC_AGT_EFATURA_URL=https://sandbox.agt.gov.ao/api/efatura/v1
NEXT_PUBLIC_AGT_PORTAL_URL=https://portaldocontribuinte.agt.gov.ao
NEXT_PUBLIC_AGT_STATUS_URL=https://portaldocontribuinte.agt.gov.ao/api/status

# Autenticação / credenciais server-side (não são expostas ao browser)
SAP_ODATA_USERNAME=
SAP_ODATA_PASSWORD=
SAP_EVENTMESH_API_HEADER=Authorization
SAP_EVENTMESH_API_KEY=
AGT_EFATURA_API_HEADER=X-API-KEY
AGT_EFATURA_API_KEY=
AGT_PORTAL_TOKEN=

# Ajustes de SLA e latência (opcional)
SAP_ODATA_SLA_MS=600
SAP_ODATA_WARN_LATENCY_MS=800
SAP_ODATA_TIMEOUT_MS=5000
SAP_ODATA_AVAILABILITY_BASELINE=99.9
SAP_EVENTMESH_SLA_MS=750
SAP_EVENTMESH_WARN_LATENCY_MS=900
SAP_EVENTMESH_TIMEOUT_MS=5500
AGT_EFATURA_SLA_MS=900
AGT_EFATURA_WARN_LATENCY_MS=1100
AGT_EFATURA_TIMEOUT_MS=6000
AGT_PORTAL_TIMEOUT_MS=7000

# Tempo de refresh automático do monitor (ms)
INTEGRATION_MONITOR_INTERVAL_MS=60000
NEXT_PUBLIC_INTEGRATION_MONITOR_INTERVAL_MS=60000
